{
  "manifest_version": 3,
  "name": "Tech News",
  "version": "1.0",
  "host_permissions": [
    "https://newsapi.org/s/google-news-api"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
